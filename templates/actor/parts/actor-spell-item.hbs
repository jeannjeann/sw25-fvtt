    <li class='item spell' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-prop flexrow flex-group-center' style="flex: 0 0 30px;">
          {{system.level}}
        </div>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img class="roll-icon" src='{{item.img}}' title='{{item.name}}'/>
            </a>
          </div>
          {{#if (eq system.fairytype "propfairy")}}
          <span class="{{system.fairyprop}}"><i class="fa-solid fa-gem"></i></span>
          {{/if}}
          {{#if (eq system.fairytype "specialfairy")}}
          <span class="{{system.fairytype}}"><i class="fa-solid fa-gem specialfairy-text"></i></span>
          {{/if}}
          {{> "systems/sw25/templates/helper/action-marks.hbs"}}
          <h4 class="spell-label">{{item.name}}</h4>
        </div>
        {{> "systems/sw25/templates/actor/parts/actor-useitems.hbs" item=item}}
        <div class='hpcost item-prop flexrow flex-group-center' style="flex: 0 0 30px;" data-cost="{{item.system.hpcost}}" data-max="{{item.system.maxhpcost}}" data-label="{{item.name}}" data-type="{{item.type}}">
          {{system.hpcost}}
        </div>
        <div class='mpcost item-prop flexrow flex-group-center' style="flex: 0 0 30px;" data-cost="{{item.system.mpcost}}" data-label="{{item.name}}" data-type="{{item.type}}">
          {{system.mpcost}}
        </div>
        <div class='item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 60px;">
          {{system.target}}
        </div>
        <div class='item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 60px;">
          {{system.rangeshape}}
        </div>
        <div class='item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 100px;">
          {{system.time}} 
        </div>
        <div class='item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 40px;">
          {{system.resistname}}
        </div>
        <div class='item-prop flexrow flex-group-center' style="flex: 0 0 80px;">
          {{system.propname}}
        </div>
      </div>
      <div class="spell-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          {{#if isOwner}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.spell")}}'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.spell")}}'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          {{else}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.spell")}}'>
                <i class='fa-solid fa-eye'></i>
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </li>
