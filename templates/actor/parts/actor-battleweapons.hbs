<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.weapon"}} ({{localize "SW25.Item.Equip"}})</div>
    <div class='item-element' style="flex: 0 0 120px;">{{localize "SW25.Skillname"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">{{localize "SW25.Item.Weapon.Hit"}}</div>
    <div class='item-element' style="flex: 0 0 90px;">{{localize "SW25.Item.Power"}}</div>
    <div class='item-element' style="flex: 0 0 70px;">{{localize "SW25.Item.Weapon.Range"}}</div>
  </li>
  {{#each battleweapons as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class="item-equip">
            <label class="equip-toggle">
              <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
            </label>
          </div>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img src='{{item.img}}' title='{{item.name}}' width='24' height='24'/>
            </a>
          </div>
          <h4 class="item-label">{{item.name}}{{#if item.system.dedicated}} ({{localize "SW25.Item.Dedicated"}}){{/if}}</h4>
        </div>
        <div class="resourcecost" style="flex: 0 0 40px; display: {{#if item.system.resuse}}block{{else}}none{{/if}};" data-resusequantity={{system.resusequantity}} data-resuse="{{system.resuse}}">
          <b>{{localize "SW25.Item.CostB"}}</b>
        </div>
        <div class='item-prop flexrow flex-group-center' style="flex: 0 0 120px;">
          {{item.system.showskill}}
        </div>
        <div class='rollable item-prop flexrow flex-group-center' style="flex: 0 0 30px;" {{#if item.system.autouseres}} data-resusequantity="{{item.system.resusequantity}}" data-resuse="{{item.system.resuse}}"{{/if}} data-roll="{{item.system.checkformula}}+{{item.system.checkbase}}" data-label="{{item.name}} ({{localize "SW25.Item.Weapon.Hit"}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applycheck}}" data-checktype="{{system.checkTypesButton}}" {{resistAttributes type system.resistinfo system.hpresist}}>
          {{item.system.checkbase}}
        </div>
        <div class='powerrollable item-prop flexrow flex-group-center' style="flex: 0 0 90px;" data-roll="{{item.system.powerformula}}" data-label="{{item.name}} ({{localize "SW25.Item.Power"}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applypower}}" data-powertype="{{system.powerTypesButton}}">
          k{{system.power}}{{#if system.totalcvalue}}@{{system.totalcvalue}}{{/if}}{{#if system.listpowerbase}}+{{system.listpowerbase}}{{/if}}
        </div>
        <div class='item-prop flexrow flex-group-center' style="flex: 0 0 70px;">
          {{item.system.range}}
        </div>
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          {{#if ../isOwner}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.weapon")}}'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.weapon")}}'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          {{else}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.weapon")}}'>
                <i class='fa-solid fa-eye'></i>
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </li>
  {{/each}}
</ol>
