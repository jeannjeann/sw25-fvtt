<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.language"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">{{localize "SW25.Item.Language.Conversation"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">{{localize "SW25.Item.Language.Reading"}}</div>
    <div class='item-controls' style="flex: 0 0 50px;">
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.language")}}'
        data-type='language'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each languages as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name' style="flex: 3;"><h4>{{item.name}}</h4></div>
        <div class="flex-group-center" style="flex: 0 0 30px;">
          <input class="cv-change" type="checkbox" name="system.conversation" data-dtype="Boolean" {{#if system.conversation}} checked {{/if}}/>
        </div>
        <div class="flex-group-center" style="flex: 0 0 30px;">
          <input class="rd-change" type="checkbox" name="system.reading" data-dtype="Boolean" {{#if system.reading}} checked {{/if}}/>
        </div>
        {{#if ../isOwner}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.language")}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
              title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.language")}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        {{else}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.language")}}'
            >
              <i class='fa-solid fa-eye'></i>
            </a>
          </div>
        {{/if}}
      </div>
    </li>
  {{/each}}
</ol>
