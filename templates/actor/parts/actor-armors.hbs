<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-element' style="flex: 0 0 40px;">{{localize "SW25.Item.Equip"}}</div>
    <div class='item-name'>{{localize "TYPES.Item.armor"}}</div>
    <div class='item-element' style="flex: 1 0 0;">{{localize "SW25.Item.Category"}}</div>
    <div class='item-element' style="flex: 0 0 50px;">{{localize "SW25.Item.Reqstr"}}</div>
    <div class='item-quantity item-element' style="flex: 0 0 60px;">{{localize "SW25.Quantity"}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.armor")}}'
        data-type='armor'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each armors as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class="flex-group-center" style="flex: 0 0 40px;">
          <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
        </div>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          <h4 class="item-label">{{item.name}}{{#if item.system.dedicated}} ({{localize "SW25.Item.Dedicated"}}){{/if}}</h4>
        </div>
        {{> "systems/sw25/templates/actor/parts/actor-useitems.hbs" item=item}}
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 1 0 0;">
          {{item.system.categoryname}}{{item.system.rank}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 50px;">
          {{item.system.reqstr}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 60px;">
{{!--
          <a class="quantity-button" data-action="decrease" data-property="item.system.quantity">
            <i class="fas fa-minus"></i>
          </a>
--}}
          <input class="qt-change" type="text" name="quantityInput" value="{{item.system.quantity}}" data-dtype="Number"/>
{{!--
          <a class="quantity-button" data-action="increase" data-property="item.system.quantity">
            <i class="fas fa-plus"></i>
          </a>
--}}
        </div>
        {{#if ../isOwner}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.armor")}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
              title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.armor")}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        {{else}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.armor")}}'
            >
              <i class='fa-solid fa-eye'></i>
            </a>
          </div>
        {{/if}}
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          <div style="flex: 0 0 50px;"></div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>
