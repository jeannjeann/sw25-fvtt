<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.armor"}} ({{localize "SW25.Item.Equip"}})</div>
    <div class='item-element' style="flex: 1 0 0;">{{localize "SW25.Item.Category"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">{{localize "SW25.Item.Armor.Dodge"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">{{localize "SW25.Attributes.Protectionpoint.abbr"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">{{localize "SW25.Attributes.Magicprotection.abbr"}}</div>
  </li>
  {{#each battlearmors as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class="item-equip">
            <label class="equip-toggle">
              <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
            </label>
          </div>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img class="roll-icon" src='{{item.img}}' title='{{item.name}}'/>
            </a>
          </div>
          <h4 class="item-label">{{item.name}}{{#if item.system.dedicated}} ({{localize "SW25.Item.Dedicated"}}){{/if}}</h4>
        </div>
        <div class='item-prop flexrow flex-group-center' style="flex: 1 0 0;">
          {{item.system.categoryname}}{{item.system.rank}}
        </div>
        <div class='item-prop flexrow flex-group-center' style="flex: 0 0 30px;">
          {{item.system.dodge}}
        </div>
        <div class='item-prop flexrow flex-group-center' style="flex: 0 0 30px;">
          {{item.system.pp}}
        </div>
        <div class='item-prop flexrow flex-group-center' style="flex: 0 0 30px;">
          {{item.system.mpp}}
        </div>
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          {{#if ../isOwner}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.armor")}}'>
                <i class='fas fa-edit'></i>
              </a>
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.armor")}}'>
                <i class='fas fa-trash'></i>
              </a>
            </div>
          {{else}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.armor")}}'>
                <i class='fa-solid fa-eye'></i>
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </li>
  {{/each}}
</ol>
