<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.combatability"}}</div>
    <div class='item-element sidebar-hidden' style="flex: 1 0 0;">{{localize "SW25.Item.Combatability.App"}} / {{localize "SW25.Item.Combatability.Risk"}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.combatability")}}' data-type='combatability'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each combatabilities as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img class="roll-icon" src='{{item.img}}' title='{{item.name}}'/>
            </a>
          </div>
          {{> "systems/sw25/templates/helper/action-marks.hbs"}}
          <h4 class="item-label">{{item.name}}</h4>
        </div>
        {{> "systems/sw25/templates/actor/parts/actor-useitems.hbs" item=item}}
        <div class='item-quantity item-prop flexrow flex-group-center sidebar-hidden' style="flex: 1 0 0;">
          {{#if system.app}}{{system.app}}{{else}}-{{/if}} / {{#if system.risk}}{{system.risk}}{{else}}-{{/if}}
        </div>
        {{#if ../isOwner}}
          <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.combatability")}}'>
              <i class="fas fa-edit"></i>
            </a>
            {{#if ../system.isEdit}}
              <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.combatability")}}'>
                <i class='fas fa-trash'></i>
              </a>
            {{else}}
              <div class="item-equip">
                {{#if system.useequip}}
                <label class="equip-toggle">
                  <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
                </label>
                {{/if}}
              </div>
            {{/if}}
          </div>
        {{else}}
          <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.View" type=(localize "TYPES.Item.combatability")}}'>
              <i class='fa-solid fa-eye'></i>
            </a>
            <div class="item-equip">
              {{#if system.useequip}}
              <label class="equip-toggle">
                <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
              </label>
              {{/if}}
            </div>
          </div>
        {{/if}}
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{#if system.secret}}{{system.school}}<hr>{{/if}}
            {{{system.description}}}
          </div>
          <div style="flex: 0 0 50px;"></div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>
