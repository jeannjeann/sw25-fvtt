<ol class='items-list'>
  {{#if abyssexshow}}
    <div class='item flexrow items-header'>
      <div class='item-name'>{{localize "SW25.Item.Resource.Types.AbyssEx"}}</div>
    </div>
    <div class='item flexrow ability-resource'>
      <div class='resources'>
        {{#each abyssexs as |item id|}}
          <li class='item' data-item-id='{{item._id}}'>
            <div class="item-prop flexrow flex-group-center">
              <h4 class="item-label">{{item.name}}</h4>
            </div>
            {{#if ../isOwner}}
              <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 80px;">
                <a class="quantity-button" data-action="decrease" data-property="item.system.quantity">
                  <i class="fas fa-minus"></i>
                </a>
                <input class="qt-change" type="text" name="quantityInput" value="{{item.system.quantity}}" data-dtype="Number"/>
                <a class="quantity-button" data-action="increase" data-property="item.system.quantity">
                  <i class="fas fa-plus"></i>
                </a>
              </div>
              {{#if ../system.isEdit}}
              <div class='item-controls'>
                <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.resource")}}'>
                  <i class='fas fa-edit'></i>
                </a>
                <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.resource")}}'>
                  <i class='fas fa-trash'></i>
                </a>
              </div>
              {{/if}}
            {{else}}
              <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 80px;">
                <input class="qt-change" type="text" name="quantityInput" value="{{item.system.quantity}}" data-dtype="Number"/>
              </div>
            {{/if}}
          </li>
        {{/each}}
      </div>
    </div>
  {{/if}}
  <li class='item flexrow items-header'>
    <div class='item-element' style="flex: 0 0 30px;">Lv</div>
    <div class='item-name'>{{localize "SW25.Item.Spell.Abyssal"}}</div>
    <div class='item-element' style="flex: 0 0 30px;">MP</div>
    <div class='item-element {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 60px;">{{localize "SW25.Target"}}</div>
    <div class='item-element {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 60px;">{{localize "SW25.Rangeshape"}}</div>
    <div class='item-element {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 100px;">{{localize "SW25.Time"}}</div>
    <div class='item-element {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 40px;">{{localize "SW25.Item.Resist"}}</div>
    <div class='item-element' style="flex: 0 0 80px;">{{localize "SW25.Item.Prop"}}</div>
  </li>
  {{#each abyssal as |item id|}}
    <li class='item spell' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 30px;">
          {{system.level}}
        </div>
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          {{> "systems/sw25/templates/helper/action-marks.hbs"}}
          <h4 class="spell-label">{{item.name}}</h4>
        </div>
        {{> "systems/sw25/templates/actor/parts/actor-useitems.hbs" item=item}}
        <div class='mpcost item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 30px;" data-cost="{{item.system.mpcost}}" data-label="{{item.name}}" data-type="{{item.type}}">
          {{system.mpcost}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 60px;">
          {{system.target}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 60px;">
          {{system.rangeshape}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 100px;">
          {{system.time}} 
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center {{#unless system.isSidebar}}sidebar-hidden{{/unless}}' style="flex: 0 0 40px;">
          {{system.resistname}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 80px;">
          {{system.propname}}
        </div>
      </div>
      <div class="spell-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          {{#if ../isOwner}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a
                class='item-control item-edit'
                title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.spell")}}'
              >
                <i class='fas fa-edit'></i>
              </a>
              <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.spell")}}'
              >
                <i class='fas fa-trash'></i>
              </a>
            </div>
          {{else}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a
                class='item-control item-edit'
                title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.spell")}}'
              >
                <i class='fa-solid fa-eye'></i>
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </li>
  {{/each}}
</ol>
