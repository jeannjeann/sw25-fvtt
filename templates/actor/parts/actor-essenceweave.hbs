<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.essenceweave"}}</div>
    <div class='item-element sidebar-hidden' style="flex: 0 0 60px;">{{localize "SW25.Target"}}</div>
    <div class='item-element sidebar-hidden' style="flex: 0 0 60px;">{{localize "SW25.Rangeshape"}}</div>
    <div class='item-element sidebar-hidden' style="flex: 0 0 100px;">{{localize "SW25.Time"}}</div>
    <div class='item-element sidebar-hidden' style="flex: 0 0 40px;">{{localize "SW25.Item.Resist"}}</div>
    <div class='item-element' style="flex: 0 0 50px;">HP</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.essenceweave")}}'
        data-type='essenceweave'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each essenceweave as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          {{> "systems/sw25/templates/helper/action-marks.hbs"}}
          <h4 class="item-label">{{item.name}}</h4>
        </div>
        {{> "systems/sw25/templates/actor/parts/actor-useitems.hbs" item=item}}
        <div class='item-quantity item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 60px;">
          {{system.target}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 60px;">
          {{system.rangeshape}}
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 100px;">
          {{system.time}} 
        </div>
        <div class='item-quantity item-prop flexrow flex-group-center sidebar-hidden' style="flex: 0 0 40px;">
          {{system.resistname}}
        </div>
        <div class='hpcost item-quantity item-prop flexrow flex-group-center' style="flex: 0 0 50px;" data-cost="{{item.system.hpcost}}" data-max="{{item.system.maxhpcost}}" data-label="{{item.name}}" data-type="{{item.type}}">
          {{system.hpcost}}{{#if system.maxhpcost}} ({{system.maxhpcost}}){{/if}}
        </div>
        {{#if ../isOwner}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.essenceweave")}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            {{#if ../system.isEdit}}
              <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.essenceweave")}}'
              >
                <i class='fas fa-trash'></i>
              </a>
            {{else}}
              <div class="item-equip">
                {{#if system.useequip}}
                <label class="equip-toggle">
                  <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
                </label>
                {{/if}}
              </div>
            {{/if}}
          </div>
        {{else}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.View" type=(localize "TYPES.Item.essenceweave")}}'
            >
              <i class='fa-solid fa-eye'></i>
            </a>
            <div class="item-equip">
              {{#if system.useequip}}
              <label class="equip-toggle">
                <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
              </label>
              {{/if}}
            </div>
          </div>
        {{/if}}
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          <div style="flex: 0 0 50px;"></div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>
