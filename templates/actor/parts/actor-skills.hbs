<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "SW25.Skillname"}}</div>
    <div class='item-skilllevel' style="flex: 0 0 60px;">{{localize "SW25.Item.Skill.Skilllevel"}}</div>
    <div class='item-controls'>
      <a class='item-control item-create' title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.skill")}}' data-type='skill'>
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each skills as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img class="roll-icon" src='{{item.img}}' title='{{item.name}}'/>
            </a>
          </div>
          <h4 class="item-label">{{item.name}}</h4>
        </div>
        <div class='item-skilllevel item-prop input flexrow flex-group-center' style="flex: 0 0 60px;">
{{!--
          <a class="changesl-button" data-action="decrease" data-property="item.system.skilllevel">
            <i class="fas fa-minus"></i>
          </a>
--}}
          <input class="sl-change" type="text" name="skilllevelInput" value="{{item.system.skilllevel}}" data-dtype="Number"/>
{{!--
          <a class="changesl-button" data-action="increase" data-property="item.system.skilllevel">
            <i class="fas fa-plus"></i>
          </a>
--}}
        </div>
        {{#if ../isOwner}}
          <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.skill")}}'>
              <i class='fas fa-edit'></i>
            </a>
            <a class='item-control item-delete' title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.skill")}}'>
              <i class='fas fa-trash'></i>
            </a>
          </div>
        {{else}}
          <div class='item-controls'>
            <a class='item-control item-edit' title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.skill")}}'>
              <i class='fa-solid fa-eye'></i>
            </a>
          </div>
        {{/if}}
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          <div style="flex: 0 0 50px;"></div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>
