<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.accessory"}} ({{localize "SW25.Item.Equip"}})</div>
    <div class='item-element' style="flex: 0 0 80px;">{{localize "SW25.Item.Accessory.Part"}}</div>
  </li>
  {{#each battleaccessories as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class="item-equip">
            <label class="equip-toggle">
              <input class="eq-change" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/>
            </label>
          </div>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img src='{{item.img}}' title='{{item.name}}' width='24' height='24'/>
            </a>
          </div>
          <h4 class="item-label">{{item.name}}</h4>{{#if item.system.dedicated}} ({{localize "SW25.Item.Dedicated"}}{{item.system.deffectname}}){{/if}}
        </div>
        <div style="text-align: center; flex: 0 0 80px;">
          {{item.system.accpartname}}
        </div>
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          {{#if ../isOwner}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a
                class='item-control item-edit'
                title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.accessory")}}'
              >
                <i class='fas fa-edit'></i>
              </a>
              <a
                class='item-control item-delete'
                title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.accessory")}}'
              >
                <i class='fas fa-trash'></i>
              </a>
            </div>
          {{else}}
            <div class='item-controls' style="flex: 0 0 50px;">
              <a
                class='item-control item-edit'
                title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.accessory")}}'
              >
                <i class='fa-solid fa-eye'></i>
              </a>
            </div>
          {{/if}}
        </div>
      </div>
    </li>
  {{/each}}
</ol>
