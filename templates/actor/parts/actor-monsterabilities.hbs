<ol class='items-list'>
  <li class='item flexrow items-header'>
    <div class='item-name'>{{localize "TYPES.Item.monsterability"}}</div>
    <div class='item-controls'>
      <a
        class='item-control item-create'
        title='{{localize "DOCUMENT.Create" type=(localize "TYPES.Item.monsterability")}}'
        data-type='monsterability'
      >
        <i class='fas fa-plus'></i>
        {{localize 'DOCUMENT.New' type=''}}
      </a>
    </div>
  </li>
  {{#each monsterabilities as |item id|}}
    <li class='item' data-item-id='{{item._id}}'>
      <div class="flexrow flex-group-center">
        <div class='item-name'>
          <div class='item-image'>
            <a class='rollable' data-roll-type='item'>
              <img
                src='{{item.img}}'
                title='{{item.name}}'
                width='24'
                height='24'
              />
            </a>
          </div>
          {{> "systems/sw25/templates/helper/action-marks.hbs"}}
          <h4 class="item-label">{{item.name}}</h4>
        </div>
        <div class="rollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usedice1}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula1}}+{{item.system.checkbase1}}" data-label="{{item.name}} ({{item.system.label1}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applycheck1}}" data-checktype="{{system.checkTypesButton}}">
          <b>{{item.system.label1}}:{{item.system.checkbase1}}({{item.system.checkbasefix1}})</b>
        </div>
          <div class='item-checkmod item-prop input' style="flex: 0 0 40px; display: {{#if system.usedice1}}block{{else}}none{{/if}};"><input class="cm1-change" type="text" name="checkmodInput" value="{{item.system.checkmod1}}" data-dtype="Number"/></div>
        <div class="rollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usedice2}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula2}}+{{item.system.checkbase2}}" data-label="{{item.name}} ({{item.system.label2}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applycheck2}}" data-checktype="{{system.checkTypesButton}}">
          <b>{{item.system.label2}}:{{item.system.checkbase2}}({{item.system.checkbasefix2}})</b>
        </div>
          <div class='item-checkmod item-prop input' style="flex: 0 0 40px; display: {{#if system.usedice2}}block{{else}}none{{/if}};"><input class="cm2-change" type="text" name="checkmodInput" value="{{item.system.checkmod2}}" data-dtype="Number"/></div>
        <div class="rollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usedice3}}block{{else}}none{{/if}};" data-roll="{{item.system.checkformula3}}+{{item.system.checkbase3}}" data-label="{{item.name}} ({{item.system.label3}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applycheck3}}" data-checktype="{{system.checkTypesButton}}">
          <b>{{item.system.label3}}:{{item.system.checkbase3}}({{item.system.checkbasefix3}})</b>
        </div>
          <div class='item-checkmod item-prop input' style="flex: 0 0 40px; display: {{#if system.usedice3}}block{{else}}none{{/if}};"><input class="cm3-change" type="text" name="checkmodInput" value="{{item.system.checkmod3}}" data-dtype="Number"/></div>
        <div class="powerrollable" style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.usepower}}block{{else}}none{{/if}};" data-roll="{{item.system.powerformula}}" data-label="{{item.name}} ({{item.system.labelmonpow}})" data-pt="{{item.system.powertable}}" data-apply="{{system.applypower}}" data-powertype="{{system.powerTypesButton}}">
          <b>{{item.system.labelmonpow}}:k{{item.system.power}}{{#if item.system.totalcvalue}}@{{item.system.totalcvalue}}{{/if}}{{#if item.system.powerbase}}+{{item.system.powerbase}}{{/if}}</b>
        </div>
          <div class='item-checkmod item-prop input' style="flex: 0 0 40px; display: {{#if system.usepower}}block{{else}}none{{/if}};"><input class="pm-change" type="text" name="checkmodInput" value="{{item.system.powermod}}" data-dtype="Number"/></div>
        <div class="applyeffect" style="flex: 0 0 40px; display: {{#if system.useeffect}}block{{else}}none{{/if}};">
          <b>{{localize "SW25.Item.EffectB"}}</b>
        </div>
        {{#if system.mpcost}}
        <div class="mpcost item-quantity item-prop" style="flex: 0 0 40px;" data-cost="{{item.system.mpcost}}" data-label="{{item.name}}" data-type="{{item.type}}">
          <b>MP:{{system.mpcost}}</b>
        </div>
        {{/if}}
        <div style="flex: 0 0 auto; margin-left: 10px; display: {{#if system.remark}}block{{else}}none{{/if}};"><b>{{item.system.remark}}</b></div>
        {{#if ../isOwner}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.monsterability")}}'
            >
              <i class='fas fa-edit'></i>
            </a>
            <a
              class='item-control item-delete'
              title='{{localize "DOCUMENT.Delete" type=(localize "TYPES.Item.monsterability")}}'
            >
              <i class='fas fa-trash'></i>
            </a>
          </div>
        {{else}}
          <div class='item-controls'>
            <a
              class='item-control item-edit'
              title='{{localize "DOCUMENT.Update" type=(localize "TYPES.Item.monsterability")}}'
            >
              <i class='fa-solid fa-eye'></i>
            </a>
          </div>
        {{/if}}
      </div>
      <div class="item-description nogapmargin">
        <div class="flexrow">
          <div style="flex: 0 0 60px;"></div>
          <div style="font-size: 0.8em;">
            {{{system.description}}}
          </div>
          <div style="flex: 0 0 50px;"></div>
        </div>
      </div>
    </li>
  {{/each}}
</ol>
