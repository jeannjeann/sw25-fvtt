<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
      <div class="grid grid-6col flex-group-center nogapmargin">
        <div class="resource grid-span-2">
          <span class="resource-label">{{system.categoryname}}{{system.rank}}</span>
        </div>
        <div class="resource">
          <span class="resource-label">{{localize "SW25.Item.Reqstr"}}<br>{{system.reqstr}}</laspanbel>
        </div>
        <div class="resource">
          <span class="resource-label">{{system.usagename}}<br>{{system.typename}}</span>
        </div>
        <div class="resource">
          <span class="resource-label" style="display: {{#if system.dedicated}}block{{else}}none{{/if}};">{{localize "SW25.Item.Dedicated"}}{{#unless (eq system.deffectname "")}}<br>{{system.deffectname}}{{/unless}}</span>
        </div>
        <div class="resource">
          <label for="{{item._id}}system.quantity" class="resource-label">{{localize "SW25.Quantity"}}</label>
          <input id="{{item._id}}system.quantity" type="text" name="system.quantity" value="{{system.quantity}}" data-dtype="Number"/>
        </div>
        <div class="resource">
          <span class="resource-label">{{localize "SW25.Item.Weapon.Hit"}}<br>{{system.hit}}</span>
        </div>
        <div class="resource">
          <span class="resource-label">{{localize "SW25.Item.Power"}}<br>k{{system.power}}{{#if system.totalcvalue}}@{{system.totalcvalue}}{{/if}}{{#if system.dmod}}+{{system.dmod}}{{/if}}</span>
        </div>
        <div class="resource grid-span-2">
          {{#if system.range}}<span class="resource-label">{{localize "SW25.Item.Weapon.Range"}}{{/if}}<br>{{system.range}}</span>
        </div>
        <div class="resource">
          <label for="{{item._id}}system.equip"><b>{{localize "SW25.Item.Equip"}}</b></label><br>
          <input id="{{item._id}}system.equip" type="checkbox" name="system.equip" data-dtype="Boolean" {{#if system.equip}} checked {{/if}}/></span>
        </div>
        <div class="resource">
          <label for="{{item._id}}system.price" class="resource-label">{{localize "SW25.Item.Price"}}</label>
          <input id="{{item._id}}system.price" type="text" name="system.price" value="{{system.price}}" data-dtype="Number"/>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize "SW25.Description"}}</a>
    <a class="item" data-tab="details">{{localize "SW25.Details"}}</a>
    <a class="item" data-tab="effects">{{localize "SW25.Effects"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Detail Tab --}}
    <div class="tab details" data-group="primary" data-tab="details">
      <div class="flexcol">
        <div class="flexrow grid grid-10col nogapmargin">
          <span class="grid-span-3" style="text-align: center;"><b>{{localize "SW25.Item.Clickitem"}}</b><br>
            <select name="system.clickitem">
              {{selectOptions clickitemOptions selected=system.clickitem localize=true}}
            </select>
          </span>
          <div class="grid-span-3"></div>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.usedice"><b>{{localize "SW25.Item.Usedice"}}</b></label><br>
            <input id="{{item._id}}system.usedice" type="checkbox" name="system.usedice" data-dtype="Boolean" {{#if system.usedice}} checked {{/if}}/></span>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.usepower"><b>{{localize "SW25.Item.Usepower"}}</b></label><br>
            <input id="{{item._id}}system.usepower" type="checkbox" name="system.usepower" data-dtype="Boolean" {{#if system.usepower}} checked {{/if}}/></span>
        </div>
        <div class="flexrow grid grid-8col">
          <span class="grid-span-3" style="text-align: center;"><b>{{localize "SW25.Item.Category"}}</b><br>
            <select name="system.category">
              {{selectOptions config.weaponCategories selected=system.category localize=true blank="-"}}
            </select>
          </span>
          <span style="text-align: center;"><b>{{localize "SW25.Item.Rank"}}</b><br>
            <select name="system.rank">
              {{selectOptions config.ranks selected=system.rank blank="-"}}
            </select>
          </span>
          <span class="grid-span-2" style="text-align: center;"><b>{{localize "SW25.Item.Weapon.Type"}}</b><br>
            <select name="system.type">
              {{selectOptions config.weaponTypes selected=system.type localize=true blank="-"}}
            </select>
          </span>
          <span style="text-align: center;"><b>{{localize "SW25.Item.Weapon.Usage"}}</b><br>
            <select name="system.usage">
              {{selectOptions config.weaponUsages selected=system.usage localize=true blank="-"}}
            </select>
          </span>
          <span style="text-align: center;"><label for="{{item._id}}system.dedicated"><b>{{localize "SW25.Item.Dedicated"}}</b></label><br>
            <input id="{{item._id}}system.dedicated" type="checkbox" name="system.dedicated" data-dtype="Boolean" {{#if system.dedicated}} checked {{/if}}/></span>
          <span style="text-align: center;"><label for="{{item._id}}system.reqstr"><b>{{localize "SW25.Item.Reqstr"}}</b></label><br>
            <input id="{{item._id}}system.reqstr" type="text" name="system.reqstr" value="{{system.reqstr}}" data-dtype="Number"/></span>
          <span style="text-align: center;"><label for="{{item._id}}system.hit"><b>{{localize "SW25.Item.Weapon.Hit"}}</b></label><br>
            <input id="{{item._id}}system.hit" type="text" name="system.hit" value="{{system.hit}}" data-dtype="Number"/></span>
          <span style="text-align: center;"><label for="{{item._id}}system.dmod"><b>{{localize "SW25.Item.Weapon.Dmod"}}</b></label><br>
            <input id="{{item._id}}system.dmod" type="text" name="system.dmod" value="{{system.dmod}}" data-dtype="Number"/></span>
          <span class="grid-span-2" style="text-align: center;"><label for="{{item._id}}system.range"><b>{{localize "SW25.Item.Weapon.Range"}}</b></label><br>
            <input id="{{item._id}}system.range" type="text" name="system.range" value="{{system.range}}" data-dtype="String"/></span>
        </div>
        <div class="flexcol grid grid-8col nogapmargin">
          <div class="grid-span-1" style="display: flex; align-items: center; justify-content: center; text-align: center;">
            <span class="resource-label"><b>{{localize "SW25.Item.UseAmmunition"}}</b></span>
          </div>
          <div class="grid-span-3" style="display: block; text-align: center;">
            <span class="resource-label"><b>{{localize "SW25.Item.Resuse"}}</b></span><br>
            <select name="system.resuse">
              {{selectOptions system.itemlist selected=system.resuse valueAttr="itemId" labelAttr="itemName" blank="SW25.Item.None" localize=true}}
            </select>
          </div>
          <div class="grid-span-1" style="display: block; text-align: center;">
            <span class="grid-span-1"><label for="{{item._id}}system.resusequantity"><b>{{localize "SW25.Item.Resquantity"}}</b></label><br>
              <input id="{{item._id}}system.resusequantity" type="text" name="system.resusequantity" value="{{system.resusequantity}}" data-dtype="Number"/></span>
          </div>
          <div class="grid-span-1 flex-group-center">
            <span style="text-align: center;"><label for="{{item._id}}system.autouseres"><b>{{localize "SW25.Item.AutoUseres"}}</b></label></span><br>
            <input id="{{item._id}}system.autouseres" type="checkbox" name="system.autouseres" data-dtype="Boolean" {{#if system.autouseres}} checked {{/if}}/>
            </span>
          </div>
          <div class="grid-span-2"></div>
        </div>
      </div>
      <div style="display: {{#if system.usedice}}block{{else}}none{{/if}};">
        {{> "systems/sw25/templates/item/parts/item-usedice.hbs"}}
      </div>
      <div style="display: {{#if system.usepower}}block{{else}}none{{/if}};">
        {{> "systems/sw25/templates/item/parts/item-usepower.hbs"}}
      </div>
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/sw25/templates/item/parts/item-effects.hbs"}}
    </div>

  </section>
</form>
