<form class="{{cssClass}}" autocomplete="off">
  <header class="sheet-header">
    <img class="profile-img" src="{{item.img}}" data-edit="img" title="{{item.name}}"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
      <div class="grid grid-6col flex-group-left nogapmargin">
        <div class="grid-span-2">
          {{> "systems/sw25/templates/helper/action-marks.hbs"}}
        </div>
        <div class="grid-span-2">
          <b>{{system.level}}{{localize "SW25.Level"}}{{localize "TYPES.Item.ridingtrick"}}</b>
        </div>
        <div class="grid-span-2"></div>
        <div class="grid-span-3">
          <b>{{localize "SW25.Item.Premise"}} : </b>{{system.premise}}
        </div>
        <div class="grid-span-3">
          <b>{{localize "SW25.Item.Ridingtrick.Support"}} : </b>{{system.support}}
        </div>
        <div class="grid-span-6">
          <b>{{localize "SW25.Item.Part"}} : </b>{{system.rtpart}}
        </div>
        <div class="grid-span-6">
          <b>{{localize "SW25.Item.Overview"}} : </b>{{system.overview}}
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    <a class="item" data-tab="description">{{localize "SW25.Description"}}</a>
    <a class="item" data-tab="details">{{localize "SW25.Details"}}</a>
    <a class="item" data-tab="effects">{{localize "SW25.Effects"}}</a>
  </nav>

  {{!-- Sheet Body --}}
  <section class="sheet-body">

    {{!-- Description Tab --}}
    <div class="tab" data-group="primary" data-tab="description">
      {{editor system.description target="system.description" rollData=rollData button=true owner=owner editable=editable}}
    </div>

    {{!-- Detail Tab --}}
    <div class="tab details" data-group="primary" data-tab="details">
      <div class="flexcol">
        <div class="flexrow grid grid-10col nogapmargin">
          <span class="grid-span-3" style="text-align: center;"><b>{{localize "SW25.Item.Clickitem"}}</b><br>
            <select name="system.clickitem">
              {{#select system.clickitem}}
              <option value="all">{{localize "SW25.Item.All"}}</option>
              <option value="power">{{localize "SW25.Item.Powerroll"}}</option>
              <option value="dice">{{localize "SW25.Item.Diceroll"}}</option>
              <option value="description">{{localize "SW25.Item.Onlydescription"}}</option>
              {{/select}}
            </select>
          </span>
          <div class="grid-span-1"></div>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.selfbuff"><b>{{localize "SW25.Item.Selfbuff"}}</b></label><br>
            <input id="{{item._id}}system.selfbuff" type="checkbox" name="system.selfbuff" data-dtype="Boolean" {{#if system.selfbuff}} checked {{/if}}/></span>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.usedice"><b>{{localize "SW25.Item.Usedice"}}</b></label><br>
            <input id="{{item._id}}system.usedice" type="checkbox" name="system.usedice" data-dtype="Boolean" {{#if system.usedice}} checked {{/if}}/></span>
          <span class="grid-span-2"  style="text-align: center;"><label for="{{item._id}}system.usepower"><b>{{localize "SW25.Item.Usepower"}}</b></label><br>
            <input id="{{item._id}}system.usepower" type="checkbox" name="system.usepower" data-dtype="Boolean" {{#if system.usepower}} checked {{/if}}/></span>
        </div>
        <div class="flexrow grid grid-10col">
          <span class="grid-span-2" style="text-align: center;"><label for="{{item._id}}system.constant"><b>{{localize "SW25.Item.Constant"}}</b></label><br>
            <input id="{{item._id}}system.constant" type="checkbox" name="system.constant" data-dtype="Boolean" {{#if system.constant}} checked {{/if}}/>
          </span>
          <span class="grid-span-2" style="text-align: center;"><label for="{{item._id}}system.main"><b>{{localize "SW25.Item.Main"}}</b></label><br>
            <input id="{{item._id}}system.main" type="checkbox" name="system.main" data-dtype="Boolean" {{#if system.main}} checked {{/if}}/>
          </span>
          <span class="grid-span-2" style="text-align: center;"><label for="{{item._id}}system.aux"><b>{{localize "SW25.Item.Aux"}}</b></label><br>
            <input id="{{item._id}}system.aux" type="checkbox" name="system.aux" data-dtype="Boolean" {{#if system.aux}} checked {{/if}}/>
          </span>
          <span class="grid-span-2" style="text-align: center;"><label for="{{item._id}}system.level"><b>{{localize "SW25.Level"}}</b></label><br>
            <input id="{{item._id}}system.level" style="max-width: calc(50% - 7px);" type="text" name="system.level" value="{{system.level}}" data-dtype="Number"/>
          </span>
          <span class="grid-span-2"></span>
          <span class="grid-span-4" style="text-align: left;"><label for="{{item._id}}system.premise"><b>{{localize "SW25.Item.Premise"}}</b></label><br>
            <input id="{{item._id}}system.premise" type="text" name="system.premise" value="{{system.premise}}" data-dtype="String"/>
          </span>
          <span class="grid-span-6" style="text-align: left;"><label for="{{item._id}}system.support"><b>{{localize "SW25.Item.Ridingtrick.Support"}}</b></label><br>
            <input id="{{item._id}}system.support" type="text" name="system.support" value="{{system.support}}" data-dtype="String"/>
          </span>
          <span class="grid-span-10" style="text-align: left;"><label for="{{item._id}}system.rtpart"><b>{{localize "SW25.Item.Part"}}</b></label><br>
            <input id="{{item._id}}system.rtpart" type="text" name="system.rtpart" value="{{system.rtpart}}" data-dtype="String"/>
          </span>
          <span class="grid-span-10" style="text-align: left;"><label for="{{item._id}}system.overview"><b>{{localize "SW25.Item.Overview"}}</b></label><br>
            <input id="{{item._id}}system.overview" type="text" name="system.overview" value="{{system.overview}}" data-dtype="String"/>
          </span>

        </div>
        <div style="display: {{#if system.usedice}}block{{else}}none{{/if}};">
          {{> "systems/sw25/templates/item/parts/item-usedice.hbs"}}
        </div>
        <div style="display: {{#if system.usepower}}block{{else}}none{{/if}};">
          {{> "systems/sw25/templates/item/parts/item-usepower.hbs"}}
        </div>
      </div>
    </div>

    {{!-- Effects Tab --}}
    <div class="tab effects" data-group="primary" data-tab="effects">
      {{> "systems/sw25/templates/item/parts/item-effects.hbs"}}
    </div>

  </section>
</form>
